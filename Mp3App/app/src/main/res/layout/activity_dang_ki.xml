<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:background="#721799">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/back"
        android:src="@drawable/iconback"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo600"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arimo_bold"
        android:text="Đăng kí"
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <EditText
        android:id="@+id/edtUsernameRe"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:hint="      Username"
        android:background="@drawable/shape_bgr_button"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="300dp"
        android:layout_height="50dp" />

    <EditText
        android:ems="10"
        android:inputType="textPassword"
        android:id="@+id/edtPasswordRe"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bgr_button"
        android:hint="      Password"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:ems="10"
        android:inputType="textPassword"
        android:id="@+id/edtRePassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bgr_button"
        android:hint="      Re - Password"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btndangki"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_dang_xuat"
        android:text="Đăng kí"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="Đã có tài khoản"
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>