<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:background="#721799">
    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/arimo_bold"
        android:text="Hàng triệu bài hát"
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arimo_bold"
        android:text="Miễn phí trên Kara Meta."
        android:textColor="#ffffff"
        android:textSize="30sp"/>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo600"
        android:layout_width="200dp"
        android:layout_height="200dp"/>\

    <Button
        android:textColor="@color/white"
        android:text="home"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/home_button"
        android:layout_width="300dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_marginTop="64dp"
        android:textSize="18sp"
        style="@style/loginFacebook"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_bgr_button"
        android:text="Đăng ký"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_dang_xuat"
        android:text="Đăng nhập"
        android:textColor="#000000"
        android:textSize="18sp"/>

</LinearLayout>